const readlineSync = require("readline-sync");

const money = readlineSync.question(" Input total amount of money you have: ");
const bitcoin = readlineSync.question("Bitcoin: ");
const ethereum = readlineSync.question("Ethereum: ");
const litecoin = readlineSync.question("Litecoin: ");


 const totalbitcoin = money / bitcoin;
 const totalethereum = money / ethereum;
 const totallitecoin = money / litecoin
console.log(`With 100$ you can buy:  ${totalbitcoin} Bitcoins  ${totalethereum} Ethereum  ${totallitecoin} Litecoin`);
