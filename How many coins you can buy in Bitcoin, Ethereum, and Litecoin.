const readlineSync = require("readline-sync");

let money = readlineSync.question("Total amount of money: ");
let bitcoin = readlineSync.question("Bitcoin: ");
let ethereum = readlineSync.question("Ethereum: ");
let litecoin = readlineSync.question("Litecoin: ");
let sum = 0;

bitcoin = parseFloat(bitcoin - 48);
ethereum = parseFloat(ethereum - 21);
litecoin = parseFloat(litecoin);

console.log(`With 100$ you can buy:  ${bitcoin} Bitcoins  ${ethereum} Ethereum  ${litecoin} Litecoin`);
